<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="@string/question_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/distancia_oito"/>
        <CheckBox
            android:text="@string/opcao_five_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:text="@string/opcao_five_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:text="@string/opcao_five_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:text="@string/opcao_five_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/question_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/distancia_oito"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:text="@string/opcao_six_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/distancia_oito"
                android:paddingLeft="@dimen/distancia_oito"/>
            <RadioButton
                android:text="@string/opcao_six_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/distancia_oito"
                android:paddingLeft="@dimen/distancia_oito"/>
            <RadioButton
                android:text="@string/opcao_six_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/distancia_oito"
                android:paddingLeft="@dimen/distancia_oito"/>
            <RadioButton
                android:text="@string/opcao_six_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/distancia_oito"
                android:paddingLeft="@dimen/distancia_oito"/>
        </RadioGroup>
        <include layout="@layout/grupo_quatro"/>
    </LinearLayout>
</merge>
