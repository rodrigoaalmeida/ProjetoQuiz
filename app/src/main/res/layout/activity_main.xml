<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distancia_oito"
        android:orientation="vertical">

        <TextView
            android:text="@string/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/distancia_oito"
            android:layout_marginBottom="@dimen/distancia_dezesseis"
            android:textSize="@dimen/size_text_heading"
            android:textStyle="bold|italic"
            android:background="@color/color_fundo_titulo"
            android:textColor="@color/color_text"/>

        <include layout="@layout/grupo_um" />
    </LinearLayout>
</ScrollView>