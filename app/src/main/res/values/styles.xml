<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Formatação das perguntas-->
    <style name="PadraoQuestions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/distancia_oito</item>
        <item name="android:textSize">@dimen/size_text_questions</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_fundo_question</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

</resources>
